import math

print('Welcome to the Right Triangle Solver App')

first_leg=float(input('What is the first leg of the triangle? Please enter:'))
second_leg=float(input('What is the second leg of the triangle? Please enter:'))

side_c=math.sqrt(first_leg**2+second_leg**2)
side_c=round(side_c,3)

area=first_leg*second_leg*0.5
area=round(area,3)

print('The hypotensue is:',str(side_c))
print('The area of the triangle is:',str(area))
